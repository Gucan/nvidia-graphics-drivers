set -e


case "$1" in
    upgrade)
    ;;
    remove)
        update-alternatives --remove #DEB_HOST_MULTIARCH#_xlib_conf /#XLDSOCONF#

        # Remove the alternative for PRIME
        update-alternatives --remove #DEB_HOST_MULTIARCH#_xlib_conf /#PMXLDSOCONF#

        # explicit ldconfig due to alternatives
        ldconfig
    ;;
esac

#DEBHELPER#

